.container {
  padding: 20px;
}

.header {
  font-size: 24px;
  font-weight: bold;
  margin-bottom: 20px;
}

.order-item {
  padding: 15px;
  margin-bottom: 10px;
  border: 1px solid #eaeaea;
  border-radius: 5px;
}

.order-field {
  display: flex;
  margin-bottom: 10px;
}

.label {
  width: 120px; /* 扩展宽度以适应长标签 */
  font-weight: bold;
}

.input {
  flex: 1;
  border: 1px solid #eaeaea;
  border-radius: 5px;
  padding: 5px;
}

.picker {
  flex: 1;
  border: 1px solid #eaeaea;
  border-radius: 5px;
  padding: 5px;
  line-height: 34px;
}

.btn {
  width: 100%;
  padding: 10px;
  background-color: #1cbbb4;
  color: #fff;
  text-align: center;
  border-radius: 5px;
  margin-top: 20px;
}
