.container {
  padding: 20px;
  background-color: #f5f5f5;  /* 增加背景颜色 */
}

.weui-cells__title {
  font-size: 20px;
  margin-bottom: 20px;
  color: #333;
}

.weui-cell {
  margin-bottom: 15px;  /* 增加单元格之间的间距 */
  display: flex;
  align-items: center;
}

.weui-cell__hd {
  width: 80px;
  font-size: 16px;
  color: #666;
}

.weui-cell__bd {
  flex: 1;
}

.weui-input {
  border: 1px solid #ccc;  /* 增加边框 */
  border-radius: 4px;  /* 边框圆角 */
  padding: 0px 10px;  /* 增加填充 */
  background-color: #fff;  /* 设置背景颜色 */
  width: 100%;
  height: 30px;
  box-sizing: border-box;
  font-size: 16px;
}

.weui-btn_primary {
  background-color: #1aad19;
  color: white;
  border-radius: 5px;
  padding: 10px;
  font-size: 16px;
  width: 100%;
  text-align: center;
  margin-top: 20px;
}
