.container {
  padding: 20px;
  background-color: #f5f5f5;
}

.weui-cells__title {
  font-size: 20px;
  margin-bottom: 20px;
  color: #333;
}

.weui-cell {
  margin-bottom: 15px;
  display: flex;
  align-items: center;
}

.weui-cell__hd {
  width: 80px;
  font-size: 16px;
  color: #666;
}

.weui-cell__bd {
  flex: 1;
}

.weui-input {
  border: 1px solid #ccc;
  border-radius: 4px;
  padding:0px 10px;
  background-color: #fff;
  width: 100%;
  box-sizing: border-box;
  font-size: 16px;
}

.weui-btn_primary {
  background-color: #1aad19;
  color: white;
  border-radius: 5px;
  padding: 10px;
  font-size: 16px;
  width: 100%;
  text-align: center;
  margin-top: 20px;
}
